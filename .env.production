# Production Environment Variables
# Copy this file and fill in real values

# Database
DB_PASSWORD=your_secure_database_password_here

# Redis
REDIS_PASSWORD=your_secure_redis_password_here

# JWT
JWT_SECRET=your_super_secure_jwt_secret_min_32_characters
JWT_EXPIRES_IN=7d

# Stripe (Production Keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (SendGrid/Amazon SES)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
EMAIL_FROM=noreply@azulstreet.com.br

# App
NODE_ENV=production
FRONTEND_URL=https://azulstreet.com.br
API_URL=https://api.azulstreet.com.br

# AWS S3 (Optional - for image uploads)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_BUCKET_NAME=azulstreet-images
AWS_REGION=sa-east-1
